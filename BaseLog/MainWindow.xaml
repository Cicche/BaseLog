<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="BaseLog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="BaseLog" Height="650" Width="1000">
    <Window.Resources>
        <Style x:Key="CellTextStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CellTextTrimmingStyle" TargetType="TextBlock" BasedOn="{StaticResource CellTextStyle}">
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>

        <Style x:Key="HeaderTextStyle" TargetType="DataGridColumnHeader">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True" Margin="8">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
            <Button Name="btnImportCsv" Content="Importa CSV" Click="btnImportCsv_Click" Margin="0,0,8,0"/>
            <Button Name="btnExportCsv" Content="Esporta CSV" Click="btnExportCsv_Click"/>
            <Button Name="btnSavePhoto" Content="Salva foto" Click="btnSavePhoto_Click" Margin="8,0,0,0"/>
            <TextBlock Name="txtStatus"/>
        </StackPanel>

        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Cerca:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBox Name="txtSearch"
                     Width="260"
                     Margin="0,0,8,0"
                     TextChanged="txtSearch_TextChanged"
                     ToolTip="Filtra su N° Salti, Data, Oggetto, Tipo salto, Note"/>
            <Button Content="Reset" Click="btnSearchReset_Click"/>
        </StackPanel>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <DataGrid x:Name="dataGridSalti"
                      Grid.Column="0"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserResizeColumns="True"
                      HeadersVisibility="Column"
                      SelectionChanged="DataGridSalti_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="N° Salti"
                                        Binding="{Binding NumeroSalto}"
                                        Width="SizeToCells"
                                        MinWidth="80"
                                        ElementStyle="{StaticResource CellTextStyle}"
                                        HeaderStyle="{StaticResource HeaderTextStyle}"/>
                    <DataGridTextColumn Header="Data"
                                        Binding="{Binding Data}"
                                        Width="SizeToCells"
                                        MinWidth="110"
                                        ElementStyle="{StaticResource CellTextStyle}"
                                        HeaderStyle="{StaticResource HeaderTextStyle}"/>
                    <DataGridTextColumn Header="Oggetto"
                                        Binding="{Binding Oggetto}"
                                        Width="SizeToCells"
                                        MinWidth="140"
                                        ElementStyle="{StaticResource CellTextTrimmingStyle}"
                                        HeaderStyle="{StaticResource HeaderTextStyle}"/>
                    <DataGridTextColumn Header="Tipo salto"
                                        Binding="{Binding TipoSalto}"
                                        Width="SizeToCells"
                                        MinWidth="120"
                                        ElementStyle="{StaticResource CellTextTrimmingStyle}"
                                        HeaderStyle="{StaticResource HeaderTextStyle}"/>
                    <DataGridTextColumn Header="Note"
                                        Binding="{Binding Note}"
                                        Width="*"
                                        MinWidth="180"
                                        ElementStyle="{StaticResource CellTextTrimmingStyle}"
                                        HeaderStyle="{StaticResource HeaderTextStyle}"/>
                </DataGrid.Columns>
            </DataGrid>

            <GridSplitter Grid.Column="1"
                          Width="5"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Background="#FFD0D0D0"
                          ResizeBehavior="PreviousAndNext"
                          ShowsPreview="True"/>

            <Grid Grid.Column="2" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" MaxHeight="220">
                    <TextBox Name="txtDettagliSalto"
                             IsReadOnly="True"
                             BorderThickness="0"
                             TextWrapping="Wrap"/>
                </ScrollViewer>

                <Image Name="imageOggetto"
                       Grid.Row="1"
                       MaxHeight="260"
                       Margin="0,10,0,10"
                       Stretch="Uniform"/>

                <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="1">
                    <wv2:WebView2 x:Name="wbMap2"/>
                </Border>

                <TextBlock x:Name="txtMapStatus"
                           Grid.Row="3"
                           Margin="0,6,0,0"
                           Foreground="Gray"/>
            </Grid>
        </Grid>
    </DockPanel>
</Window>