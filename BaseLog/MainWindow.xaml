<Window x:Class="BaseLog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BaseLog" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <DataGrid Name="dataGridSalti" Grid.Column="0"
                  AutoGenerateColumns="True"
                  SelectionChanged="DataGridSalti_SelectionChanged"/>

        <StackPanel Grid.Column="1" Margin="10" >
            <TextBox Name="txtDettagliSalto" Height="200" IsReadOnly="True" 
                     TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
            <Image Name="imageOggetto" Height="200" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>